@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <form method="post">
        <div class="col-2">Текст для оценки:</div>
        <div class="col-10">
            <textarea name="text" rows="5" cols="50"></textarea>
            <select name="country">
                <option>Russia</option>
                <option>France</option>
                <option>Germany</option>
                <option>USA</option>
                <option>India</option>
            </select>
            <input type="submit" />
        </div>
    </form>
</div>